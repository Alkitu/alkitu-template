# ============================================
# Production Environment Variables
# Copy to .env.production and fill in values
# ============================================

# ==========================================
# Application
# ==========================================
APP_NAME=Alkitu
NEXT_PUBLIC_APP_NAME=Alkitu
APP_URL=https://yourdomain.com
API_URL=https://api.yourdomain.com
NEXT_PUBLIC_APP_URL=https://yourdomain.com
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# ==========================================
# Database (MongoDB Atlas)
# ==========================================
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/alkitu?retryWrites=true&w=majority

# ==========================================
# Redis (Optional - for caching/sessions)
# ==========================================
REDIS_URL=redis://default:password@redis-host:6379
REDIS_PASSWORD=your-secure-redis-password

# ==========================================
# Authentication (JWT)
# ==========================================
JWT_SECRET=your-very-secure-jwt-secret-min-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-very-secure-refresh-secret-min-32-characters
JWT_REFRESH_EXPIRES_IN=30d

# ==========================================
# Email Service (Resend)
# ==========================================
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Alkitu

# ==========================================
# CORS Configuration
# ==========================================
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://admin.yourdomain.com

# ==========================================
# Node Environment
# ==========================================
NODE_ENV=production
PORT=3001
WEB_PORT=3000
API_PORT=3001

# ==========================================
# Next.js Configuration
# ==========================================
NEXT_TELEMETRY_DISABLED=1

# ==========================================
# Push Notifications (Web Push - VAPID)
# ==========================================
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@yourdomain.com

# ==========================================
# Analytics (Optional)
# ==========================================
# VERCEL_ANALYTICS_ID=
# NEXT_PUBLIC_GA_TRACKING_ID=

# ==========================================
# Error Tracking (Optional - Sentry)
# ==========================================
# NEXT_PUBLIC_SENTRY_DSN=
# SENTRY_AUTH_TOKEN=
# SENTRY_ORG=
# SENTRY_PROJECT=

# ==========================================
# Google Drive API (Media Manager / File Storage)
# ==========================================
# Service account credentials from Google Cloud Console
GOOGLE_DRIVE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_DRIVE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key-here\n-----END PRIVATE KEY-----"
GOOGLE_DRIVE_PROJECT_ID=your-project-id
GOOGLE_DRIVE_ROOT_FOLDER_ID=your-root-folder-id

# Google Workspace Shared Drive (optional - leave empty for My Drive mode)
# GOOGLE_DRIVE_SHARED_DRIVE_ID=your-shared-drive-id

# Public - used by Media Manager frontend
NEXT_PUBLIC_DRIVE_ROOT_FOLDER_ID=your-root-folder-id
NEXT_PUBLIC_DRIVE_SERVICE_EMAIL=your-service-account@project.iam.gserviceaccount.com
