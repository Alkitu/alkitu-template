{
  "name": "@alkitu/template",
  "version": "1.0.0",
  "private": true,
  "description": "Alkitu Template - Complete Fullstack Monorepo with Web, API, and Mobile applications",
  "keywords": [
    "alkitu",
    "template",
    "monorepo",
    "nextjs",
    "nestjs",
    "flutter",
    "fullstack"
  ],
  "author": "Alkitu Team",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:web dev:api",
    "dev:web": "npm run dev --workspace=@alkitu/web",
    "dev:api": "npm run dev --workspace=@alkitu/api",
    "dev:docker": "docker-compose -f docker-compose.dev.yml up -d",
    "build": "npm run build:shared && npm run build:api && npm run build:web",
    "build:shared": "npm run build --workspace @alkitu/shared",
    "build:api": "npm run build --workspace @alkitu/api",
    "build:web": "npm run build --workspace @alkitu/web",
    "test": "npm run test:web && npm run test:api && npm run test:shared",
    "test:unit": "npm run test:web && npm run test:api && npm run test:shared",
    "test:all": "npm run lint && npm run type-check && npm run test",
    "test:web": "npm run test --workspace @alkitu/web",
    "test:api": "npm run test --workspace @alkitu/api",
    "test:shared": "npm run test --workspace @alkitu/shared",
    "test:mutation": "npm run test:mutation --workspace @alkitu/api || echo 'Mutation testing not configured yet'",
    "test:e2e": "npm run test:e2e --workspace @alkitu/web",
    "test:e2e:ui": "npm run test:e2e:ui --workspace @alkitu/web",
    "test:e2e:debug": "npm run test:e2e:debug --workspace @alkitu/web",
    "test:e2e:ali-116": "npm run test:e2e:ali-116 --workspace @alkitu/web",
    "test:playwright": "npm run test:playwright --workspace @alkitu/web",
    "quality:gates": "npm run lint && npm run type-check && npm run test",
    "lint": "npm run lint:web && npm run lint:api && npm run lint:shared",
    "lint:web": "npm run lint --workspace @alkitu/web",
    "lint:api": "npm run lint --workspace @alkitu/api",
    "lint:shared": "npm run lint --workspace @alkitu/shared",
    "type-check": "npm run type-check:web && npm run type-check:api && npm run type-check:shared",
    "type-check:web": "npm run type-check --workspace @alkitu/web",
    "type-check:api": "npm run type-check --workspace @alkitu/api",
    "type-check:shared": "npm run type-check --workspace @alkitu/shared",
    "clean": "npm run clean:web && npm run clean:api && npm run clean:shared && rm -rf dist",
    "clean:web": "cd packages/web && npm run clean",
    "clean:api": "cd packages/api && npm run clean",
    "clean:shared": "cd packages/shared && npm run clean",
    "docker:stop": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:restart": "docker-compose -f docker-compose.dev.yml restart",
    "db:shell": "docker exec -it alkitu-mongodb-dev mongosh",
    "db:migrate": "cd packages/api && npm run prisma:migrate",
    "db:push": "cd packages/api && npm run prisma:push",
    "db:studio": "cd packages/api && npm run prisma:studio",
    "db:test": "node scripts/test-db-connection.js"
  },
  "devDependencies": {
    "@types/culori": "^4.0.0",
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.2",
    "npm-run-all": "^4.1.5",
    "prisma": "^6.19.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/alkitu-template.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/alkitu-template/issues"
  },
  "homepage": "https://github.com/your-org/alkitu-template#readme",
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "culori": "^4.0.2",
    "mongodb": "^6.20.0",
    "zustand": "^5.0.6"
  }
}
