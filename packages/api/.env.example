# Database
DATABASE_URL="mongodb://localhost:27017/alkitu?replicaSet=rs0"

# API URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3001"

# Environment (development, production, or test)
NODE_ENV="development"

# JWT Secret (REQUIRED - change in production!)
# Without this, JWT authentication will fail with 401 Unauthorized
JWT_SECRET="dev-secret-key-change-in-production"

# OAuth Credentials
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Configuration
RESEND_API_KEY="your-resend-api-key"
EMAIL_FROM="noreply@yourdomain.com"

# Optional: Email credentials for Gmail
GOOGLE_USER_EMAIL="your-email@gmail.com"
GOOGLE_USER_PASSWORD="your-app-password"

# Optional: External integrations
HOLDED_API_KEY="your-holded-api-key"

# Optional: Google Drive API
GOOGLE_DRIVE_CLIENT_EMAIL="your-service-account@project.iam.gserviceaccount.com"
GOOGLE_DRIVE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
GOOGLE_DRIVE_PROJECT_ID="your-project-id"
GOOGLE_DRIVE_CLIENT_ID="your-client-id"
GOOGLE_DRIVE_ROOT_FOLDER_ID="your-folder-id"
