{
  "name": "@alkitu/api",
  "version": "1.0.0",
  "private": true,
  "description": "Alkitu API - NestJS Backend with GraphQL, tRPC, and REST endpoints",
  "author": "Alkitu Team",
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "dev": "nest start --watch --preserveWatchOutput",
    "dev:ts": "ts-node -r tsconfig-paths/register src/main.ts",
    "start": "nest start",
    "start:prod": "node dist/api/src/main.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "type-check": "tsc --noEmit",
    "test": "jest --config jest.config.mjs",
    "test:watch": "jest --watch --config jest.config.mjs",
    "test:cov": "jest --coverage --config jest.config.mjs",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:mutation": "stryker run",
    "test:mutation:optimized": "stryker run stryker.optimized.conf.mjs",
    "test:mutation:watch": "stryker run --watch",
    "test:tdd": "jest --watch --verbose",
    "test:green": "jest --coverage --verbose",
    "test:refactor": "npm run lint && npm run type-check && npm run test:cov",
    "test:all": "npm run test:cov && npm run test:mutation",
    "test:ci": "npm run test:cov && npm run test:mutation",
    "test:solid": "jest --testNamePattern='SOLID' --verbose",
    "test:contracts": "jest --testNamePattern='Contract' --verbose",
    "test:integration": "jest --testNamePattern='Integration' --verbose",
    "test:performance": "jest --testNamePattern='Performance' --verbose",
    "quality:gates": "npm run test:cov && npm run test:mutation && npm run lint && npm run type-check",
    "reports:generate": "mkdir -p reports && npm run test:cov && npm run test:mutation",
    "clean": "rm -rf dist",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "docker:db": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:db:down": "docker-compose -f docker-compose.dev.yml down"
  },
  "dependencies": {
    "@alkitu/shared": "file:../shared",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-socket.io": "^11.1.3",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/websockets": "^11.1.3",
    "@prisma/client": "^6.10.1",
    "@trpc/server": "^11.4.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^16.6.0",
    "nestjs-zod": "^4.3.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "prisma": "^6.10.1",
    "reflect-metadata": "^0.2.2",
    "resend": "^4.6.0",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "swagger-ui-express": "^5.0.1",
    "web-push": "^3.6.7",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@isaacs/brace-expansion": "^5.0.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.1.3",
    "@stryker-mutator/core": "^9.0.1",
    "@stryker-mutator/html-reporter": "^3.1.0",
    "@stryker-mutator/jest-runner": "^9.0.1",
    "@stryker-mutator/typescript-checker": "^9.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.3",
    "ansis": "^3.3.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "jest-extended": "^6.0.0",
    "jest-mock-extended": "^4.0.0",
    "jest-util": "^30.2.0",
    "mongodb-memory-server": "^10.1.4",
    "node-emoji": "^2.1.3",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
